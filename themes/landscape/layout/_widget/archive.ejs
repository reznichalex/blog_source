<% const posts = site.posts.filter(post => {
  return post.categories.data.find(category => {
    return category.name === "log";
  })
}) %>

<% if (posts.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('archive_a') %></h3>
    <div class="widget">
      <%- list_archives({show_count: theme.show_count, type: theme.archive_type}) %>
    </div>
  </div>
<% } %>
