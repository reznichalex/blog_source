<% const posts = site.posts.filter(post => {
  return post.categories.data.filter(category => {
    return category.name == "log";
  }).length < 1
}) %>

<% if (posts.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('recent_posts') %></h3>
    <div class="widget">
      <ul>
        <% posts.sort('date', -1).limit(5).each(function(post){ %>
          <li>
            <a href="<%- url_for(post.path) %>"><%= post.title || '(no title)' %></a>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
<% } %>